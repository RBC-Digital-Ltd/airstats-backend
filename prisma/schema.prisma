generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model flight {
  id                   Int          @id @default(autoincrement())
  callsign             String
  cid                  Int
  departure            String
  arrival              String
  is_active            Boolean
  inactive_count       Int          @default(0)
  aircraft             String
  aircraft_short       String
  aircraft_faa         String
  alternate            String
  remarks              String
  route                String
  flight_rules         String
  flight_plan_altitude String
  revision_id          Int
  assigned_transponder String
  flightdata           flightdata[]
}

model flightdata {
  id        Int    @id @default(autoincrement())
  flight_id Int
  flight    flight @relation(fields: [flight_id], references: [id])

  latitude    Float
  longitude   Float
  altitude    Int
  groundspeed Int
  transponder Int
  heading     Int
  qnh_i_hg    Float
  qnh_mb      Float
  timestamp   DateTime @default(now())

  @@unique([flight_id, timestamp])
}
